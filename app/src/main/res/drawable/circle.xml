<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <size
                android:width="40dp"
                android:height="40dp" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <stroke
                android:width="10dp"
                android:color="#2C85EF" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="100dp"
                android:height="100dp" />

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <gradient
                android:centerX="50%"
                android:centerY="50%"
                android:endColor="#652E2E2E"
                android:gradientRadius="100%"
                android:startColor="#000000"
                android:type="radial" />

        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="40dp"
                android:height="40dp" />
            <solid android:color="#2C6ADB" />
        </shape>
    </item>

</layer-list>